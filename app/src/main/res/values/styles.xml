<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetBottom">@dimen/spacing_0</item>
        <item name="android:insetTop">@dimen/spacing_0</item>
        <item name="backgroundTint">@color/color_state_material_button</item>
        <item name="cornerRadius">@dimen/spacing_8</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="color">?colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">900</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>


    <style name="AppTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="boxStrokeColor">@color/white</item>-->
        <!--        <item name="boxStrokeWidth">0dp</item>-->
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_8</item>
        <item name="android:color">?android:attr/textColorPrimary</item>
        <!--        <item name="backgroundColor">?attr/colorSurface</item>-->
        <item name="hintEnabled">true</item>
    </style>


    <style name="CustomTextInputDropdownLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!--        <item name="boxBackgroundColor">@color/text_field_bg</item>-->
        <item name="hintEnabled">true</item>
        <!--        <item name="boxStrokeColor">@color/text_field_bg</item>-->
        <!--        <item name="boxStrokeWidth">0dp</item>-->
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_8</item>
        <item name="android:color">?android:attr/textColorPrimary</item>
        <!--        <item name="strokeColor">@color/text_field_bg</item>-->
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.AndroidDevCodingAssigment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlerterStyle">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">@dimen/spacing_16</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--    Custom rounded bottom sheet-->
    <style name="RoundedBottomDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/blue_ocean</item>
        <item name="colorPrimaryVariant">@color/blue_ocean_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded_corner_bg</item>
    </style>
</resources>